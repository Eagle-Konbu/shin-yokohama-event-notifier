{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": [
    "0 9 * * 1"
  ],
  "labels": [
    "dependencies"
  ],
  "automergeType": "pr",
  "prConcurrentLimit": 3,
  "packageRules": [
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "github-actions",
      "automerge": true
    },
    {
      "description": "Group Go dependencies minor and patch updates",
      "matchManagers": [
        "gomod"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "go-dependencies",
      "automerge": true
    },
    {
      "description": "Group Terraform provider minor and patch updates",
      "matchManagers": [
        "terraform"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "terraform-providers",
      "automerge": true
    }
  ]
}